<div id="follow-container">
  <div id="follow-feed">
    <h1>@<%= @user.username %>'s followers</h1>
    <% @user.followers.each do |follower| %>
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= link_to "@" + follower.username, follower %>
            <% if follower.id == session[:user_id] %>
              <span class="label label-success">This is your profile</span>
            <% else %>
              <% if current_user %>
                <% if current_user.following?(follower) %>
                  <span><%= link_to 'Unfollow', unfollow_user_path(:id => follower.id), class: "btn btn-default btn-xs" %></span>
                <% else %>
                  <span><%= link_to 'Follow', follow_user_path(:id => follower.id), class: "btn btn-success btn-xs" %></span>
                <% end %>
              <% end %>
            <% end %>
          </h3>
        </div>
        <div class="panel-body">
          <%= link_to followers_path(:id => follower.id) do %>
            <div class="stat-left">
              <small>Followers</small>
              <h4><%= @user.followers.count %></h4>
            </div>
          <% end %>
          <%= link_to following_path(:id => follower.id) do %>
            <div class="stat-center">
              <small>Following</small>
              <h4><%= @user.follow_count %></h4>
            </div>
          <% end %>
          <div class="stat-right">
            <small>Ratio</small>
            <h4><%= follower.ratio %></h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>