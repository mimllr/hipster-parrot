<div class="clear"></div>
<div id="profile-container">
  <div class="user-stats">
    <% if @user.id == session[:user_id] %>
      <h1>This is your profile</h1>
    <% else %>
      <h1><%= @user.username %>'s profile
      <% if current_user %>
        <% if current_user.following?(@user) %>
          <%= link_to 'Unfollow', unfollow_user_path, class: "btn btn-primary" %>
        <% elsif  %>
          <%= link_to 'Follow', follow_user_path, class: "btn btn-primary" %>
        <% end %>
      <% end %></h1>
    <% end %>

    <%= link_to followers_path do %>
      <div class="stat-left">
        <small>Followers</small>
        <h4><%= @user.followers.count %></h4>
      </div>
    <% end %>
    <%= link_to following_path do %>
      <div class="stat-center">
        <small>Following</small>
        <h4><%= @user.follow_count %></h4>
      </div>
    <% end %>
    <div class="stat-right">
      <small>Ratio</small>
      <h4><%= @user.ratio %></h4>
    </div>
  </div>

  <div id="user-feed">
    <h1>Feed</h1>
    <% if @user.posts.count > 0 %>
      <% @user.posts.reverse.each do |post| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Posted on <%= post.created_at.strftime('%A, %B %e at %m:%M %p') %>.</h3>
          </div>
          <div class="panel-body">
            <p><%= post.text %>
              <% if @user == current_user %>
                <span> | <%= link_to("Delete", post_path(post), method: :delete, data: {confirm: "Are you sure?"}) %> </span></p>  
              <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <h3>No posts.</h3>
    <% end %>
  </div>
</div>