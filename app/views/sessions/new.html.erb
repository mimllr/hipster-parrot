<div id="signup">
  <h1>Login</h1>

  <%= form_tag({:action => 'create'}, {:class => 'form-horizontal'}) do %>
    <div class="form-group">
      <%= label_tag :username, nil, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-4">
        <%= text_field_tag :username, nil, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :password, nil, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-4">
        <%= password_field_tag :password, nil, :class => 'form-control' %>
      </div>
    </div>

    <%= submit_tag "Login", :class => 'btn btn-primary col-sm-offset-2' %>
  <% end %>

  <h2>Don't have an account?</h2>
  <%= link_to 'Sign up', new_user_path, class: "btn btn-primary" %>
</div>